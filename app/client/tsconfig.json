{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
        "alwaysStrict": true,
		"noUnusedLocals": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "listFiles": true,
        "pretty": true,
        "target": "es3",
        "watch": true
	},
	"compileOnSave": true,
	"include": [
		"./"
	]
}