{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"noImplicitThis": true,
		"noImplicitAny": true,
        "alwaysStrict": true,
		"noUnusedLocals": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "pretty": true,
        "target": "es5",
		"noUnusedParameters": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true
	},
	"compileOnSave": true,
	"include": [
		"./"
	]
}