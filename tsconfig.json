{
	"compilerOptions": {
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"preserveConstEnums": false,
		"listFiles": false,
		"pretty": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"target": "es6",
		"jsx": "react",
		"jsxFactory": "html.jsx",
		"noUnusedParameters": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true,
		"strictBindCallApply": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"sourceMap": true,
		"resolveJsonModule": true
	},
	"compileOnSave": true,
	"include": [
		"./app/server",
		"./app/shared",
		"./app/client/src",
		"./app/client/src/**/*.json",
		"./app/i18n",
		"./types"
	],
	"exclude": ["./app/server/build", "./app/client/src/sw/serviceworker.ts"],
	"ts-node": {
		"compilerOptions": {
			"alwaysStrict": true,
			"forceConsistentCasingInFileNames": true,
			"module": "CommonJS",
			"moduleResolution": "node",
			"noImplicitAny": true,
			"noImplicitThis": true,
			"preserveConstEnums": false,
			"listFiles": false,
			"pretty": true,
			"noFallthroughCasesInSwitch": true,
			"noImplicitReturns": true,
			"noUnusedLocals": true,
			"target": "es6",
			"jsx": "react",
			"jsxFactory": "html.jsx",
			"noUnusedParameters": true,
			"experimentalDecorators": true,
			"strictPropertyInitialization": true,
			"strictNullChecks": true,
			"strictBindCallApply": true,
			"allowSyntheticDefaultImports": true,
			"declaration": true,
			"resolveJsonModule": true
		}
	}
}
